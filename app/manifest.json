{
	"manifest_version": 2,
	"name": "Mini Floating Player",
	"version": "1.0.2",
	"description": "Watching YouTube video on the mini floating window.",
	"icons": {
		"16": "icons/ic_luncher_16.png",
		"48": "icons/ic_luncher_48.png",
		"128": "icons/ic_luncher_128.png"
	},
	"permissions": [
		"alwaysOnTopWindows",
		"webview",
		"storage",
		"fullscreen",
		"system.network"
	],
	"app": {
		"background": {
			"scripts": ["scripts/background.js"]
		}
	},
	"sockets": {
		"tcpServer": {
			"listen": ["*"]
		}
	}
}
