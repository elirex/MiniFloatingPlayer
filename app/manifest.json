{
	"manifest_version": 2,
	"name": "Floating Player",
	"version": "1.0.0",
	"description": "This APP let you watch a youtube video at the floating window.",
	"permissions": [
		"alwaysOnTopWindows",
		"webview",
		"http://gdata.youtube.com/*",
		"storage",
		"fullscreen",
		"system.network"
	],
	"app": {
		"background": {
			"scripts": ["scripts/background.js"]
		}
	},
	"sockets": {
		"tcpServer": {
			"listen": ["*"]
		}
	}
}
